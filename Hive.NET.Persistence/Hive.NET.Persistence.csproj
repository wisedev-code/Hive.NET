<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>Hive.NET.Persistence</RootNamespace>
    </PropertyGroup>


    <PropertyGroup>
        <PackageId>HiveNET.Persistence</PackageId>
        <Version>0.0.2</Version>
        <Authors>Wisedev, Piotr Åšwierad</Authors>
        <Company>Wisedev</Company>
        <Description>Scalable task management in .NET with animal reference. - Addition to store status information</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/wisedev-code/Hive.NET</PackageProjectUrl>
        <RepositoryUrl>https://github.com/wisedev-code/Hive.NET</RepositoryUrl>
